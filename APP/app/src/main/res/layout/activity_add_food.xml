<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context=".AddFoodActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Café da Manhã"
        android:fontFamily="@font/cloud"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do alimento"
        android:fontFamily="@font/cloud"
        android:textColor="@color/lightBlue"
        android:textSize="16sp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:id="@+id/inputFoodName"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/input_field"
        android:ems="14"
        android:fontFamily="@font/cloud_light"
        android:layout_marginTop="190dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/darkGray"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade"
        android:fontFamily="@font/cloud"
        android:textColor="@color/lightBlue"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:id="@+id/inputQuantity"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:background="@drawable/input_field"
        android:ems="14"
        android:fontFamily="@font/cloud_light"
        android:layout_marginTop="280dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/darkGray"
        android:textSize="16sp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidade"
        android:fontFamily="@font/cloud"
        android:textColor="@color/lightBlue"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="180dp"/>

    <Spinner
        android:id="@+id/spinUnit"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:background="@drawable/input_field"
        android:ems="14"
        android:fontFamily="@font/cloud_light"
        android:layout_marginTop="280dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/darkGray"
        android:textSize="16sp"
        android:layout_marginLeft="180dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:background="@drawable/ic_btn_filled"
        android:fontFamily="@font/cloud_light"
        android:onClick="onClickConfirm"
        android:text="@string/confirm"
        android:textColor="@color/darkBlue"
        android:textSize="20sp"
        app:backgroundTint="@color/lightBlue"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>