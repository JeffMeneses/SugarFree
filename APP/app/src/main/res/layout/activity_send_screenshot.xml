<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendScreenshotActivity"
    android:background="@color/darkBlue"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.124"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_return_arrow"
            android:onClick="onClickReturn"/>

        <ImageView
            android:id="@+id/lblTitleSugarFree"
            android:layout_width="117dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_sugarfree_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/cloud"
            android:text="A legibilidade das informações é essencial."
            android:textColor="@color/lightBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitleSugarFree" />

        <TextView
            android:id="@+id/txtFirstTip"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cloud"
            android:layout_marginTop="5dp"
            android:text="Anexe uma imagem que conste o título e os ingredientes da receita."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="305dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_default_recipe_image"
            android:background="#C7C9CC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFirstTip" />

        <TextView
            android:id="@+id/txtSecondTip"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cloud"
            android:layout_marginTop="20dp"
            android:text="Anexe uma segunda imagem que conste o modo de preparo da receita."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFirst" />

        <ImageView
            android:id="@+id/imgSecond"
            android:layout_width="305dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_default_recipe_image"
            android:background="#C7C9CC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSecondTip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btn_filled"
            android:fontFamily="@font/cloud_light"
            android:text="Enviar"
            android:textColor="@color/darkBlue"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/lightBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSecond"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>